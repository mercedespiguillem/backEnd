


<h2 style="color:crimson;">Historial</h2>

{{#if products.length > 0 }} 
<div class="table-responsive">
  <table class="table table-dark">
    <tr style="color: yellow;">
      <th>Nombre</th>
      <th>Precio</th>
      <th>Foto</th>
    </tr>
    {{#for const productos of productos}}
      <tr>
        <td>{productos.title}</td>
        <td>{{productos.price}}</td>
        <td>{{productos.thumbnail}}</td>
      </tr>
    {{/for}}
  </table>
</div>
{{#else}}
         <h3 class="alert alert-danger">No hay productos</h1>
    {{/else}} 
{{/if}}

<button action="/" method="post" class="btn btn-success mt-3 mb-5">Ingresar
  producto</button>