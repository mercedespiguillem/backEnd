<h2 style="color:crimson;">Historial</h2>

<% if(productosApi.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Foto</th> </tr>
            <% for (const producto of productos) {%>
            <tr>
                <td><%=producto.title%></td>
                <td><%=producto.price%></td>
                <td><%=producto.thumbnail%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">No hay productos</h1>
<% } %>

<button action="/" method="post" class="btn btn-success mt-3 mb-5">Ingresar producto</button>